<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_ee"
    android:orientation="vertical"
    >

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/input_div"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginBottom="9dp"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="12dp"
      android:layout_marginTop="9dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/img_voice"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/keyboard_audio"
        />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

      <EditText
          android:id="@+id/edt_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_white_4"
          android:maxLength="500"
          android:maxLines="3"
          android:minHeight="40dp"
          android:paddingLeft="7dp"
          android:paddingRight="7dp"
          android:textColor="@color/gray_44"
          android:textSize="14dp"
          />

      <TextView
          android:id="@+id/txt_hold_say"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="@drawable/bg_hold_say"
          android:gravity="center"
          android:text="@string/tab_hold_say"
          android:textColor="@color/gray_44"
          android:textSize="14dp"
          android:visibility="gone"
          />
    </FrameLayout>

    <ImageView
        android:id="@+id/img_emoji"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/keyboard_emoji"
        />

    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        >

      <TextView
          android:id="@+id/txt_send"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/bg_blue_round5_selector"
          android:gravity="center"
          android:includeFontPadding="false"
          android:padding="0dp"
          android:text="发送"
          android:textColor="@android:color/white"
          android:textSize="12dp"
          />

      <ImageView
          android:id="@+id/img_more"
          android:visibility="gone"
          android:layout_width="28dp"
          android:layout_gravity="center"
          android:layout_height="28dp"
          android:src="@drawable/keyboard_add"
          />
    </FrameLayout>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/input_div"
      />

  <FrameLayout
      android:id="@+id/flayout_emoji"
      android:layout_width="match_parent"
      android:layout_height="210dp"
      android:visibility="gone"
      />

</LinearLayout>